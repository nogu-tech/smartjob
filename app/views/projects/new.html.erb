<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Project</h1>
        <%= form_for @project do |f| %>
          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_area :title, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :term %>
            <%= f.text_area :team, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :staff %>
            <%= f.text_area :staff, class: 'form-control' %>
          </div>
          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>